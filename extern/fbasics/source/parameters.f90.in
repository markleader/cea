module fb_parameters

    ! Compiler-provided constants
    use, intrinsic :: iso_fortran_env, only : &
        sp     => real32,      &
        dp     => real64,      &
        stdin  => input_unit,  &
        stdout => output_unit, &
        stderr => error_unit

    ! Default working precision
    integer, parameter :: wp = dp

    ! Useful "Magic Numbers"
    integer, parameter  :: empty_int = huge(0)
    real(wp), parameter :: empty_real = huge(0.0d0)
    real(wp), parameter :: tol = sqrt(epsilon(empty_real))

    ! Physical Constants (CODATA2018)
    real(wp), parameter :: avogadro     = 6.02214076d+23      ! 1/mol
    real(wp), parameter :: boltzmann    = 1.380649d-23        ! J/K
    real(wp), parameter :: gas_constant = boltzmann*avogadro  ! J/mol-K
    real(wp), parameter :: std_atm      = 1.01325d+5          ! Pa
    real(wp), parameter :: std_gravity  = 9.80665d+0          ! m/s

    ! Math constants
    real(wp), parameter :: pi        = acos(-1.0d0)
    real(wp), parameter :: sqrt2     = sqrt(2.0d0)
    real(wp), parameter :: sqrt3     = sqrt(3.0d0)
    real(wp), parameter :: inv_pi    = 1.0d0/pi
    real(wp), parameter :: inv_sqrt2 = 1.0d0/sqrt2
    real(wp), parameter :: inv_sqrt3 = 1.0d0/sqrt3

end module
